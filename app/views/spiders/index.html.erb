<p id="notice"><%= notice %></p>

<h1>Spiders</h1>
<div class="container">


<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Venemous</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spiders.each do |spider| %>
      <tr>
        <td><%= spider.species %></td>
        <td><%= spider.venemous %></td>
        <td><%= spider.description %></td>
        <td><%= link_to (image_tag spider.picture.url),spider if spider.picture %></td>
        <td><%= link_to 'Show', spider %></td>
        <td><%= link_to 'Edit', edit_spider_path(spider) %></td>
        <td><%= link_to 'Destroy', spider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spider', new_spider_path %>
</div>